{
  "compilerOptions": {
    "target": "ES2020",                       // modern JS features
    "module": "CommonJS",                     // use CommonJS for Node.js
    "rootDir": "./",                       // your source code folder
    "outDir": "./dist",                       // compiled JS output
    "esModuleInterop": true,                  // allow default imports (like express, dotenv)
    "strict": true,                           // enable strict type checking
    "skipLibCheck": true,                     // skip checking .d.ts files for speed
    "forceConsistentCasingInFileNames": true, // avoids case-sensitive import issues
    "sourceMap": true                         // for debugging
  },
  "include": ["src"],                         // compile only source files
  "exclude": ["node_modules", "dist"]         // skip build output &Â dependencies
}